<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtIdeaTitle"
        android:id="@+id/ideaDetailTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txtGoalDescriptionHint"
        android:id="@+id/ideaDetailDescription"
        android:layout_below="@+id/ideaDetailTitle"
        android:layout_alignLeft="@+id/ideaDetailTitle"
        android:layout_alignStart="@+id/ideaDetailTitle" />
</RelativeLayout>
